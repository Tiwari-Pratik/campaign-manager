generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ScheduleType {
  day       String
  startTime String
  endTime   String
}

model Campaign {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  campaignType      String
  campaignStartDate DateTime
  campaignEndDate   DateTime
  schedule          ScheduleType[]

  @@map("campaigns")
}
